<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="jp.techacademy.kusumi.daiju.taskapp.CategoryEditActivity"
    tools:showIn="@layout/activity_category_edit">

    <Button
        android:id="@+id/buttonCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="編集・削除するカテゴリを選択"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/category_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="タイトル"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/category_edit_text"
        android:layout_marginTop="15dp"
        android:text="修正"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonEdit"
        android:layout_alignBottom="@+id/buttonEdit"
        android:layout_alignParentEnd="true"
        android:text="キャンセル"
        android:textSize="18sp" />

</RelativeLayout>
